class Solution {
    public int[] intersection(int[] nums1, int[] nums2) {


        Arrays.sort(nums1);
        Arrays.sort(nums2);

        int p1=0,p2=0;

        Set<Integer> st=new HashSet<Integer>();
        int n1=nums1.length;
        int n2=nums2.length;

        while(p1<n1 && p2<n2){
            if(nums1[p1]==nums2[p2]){
                st.add(nums1[p1]);
                p1++;
                p2++;
            }else if(nums1[p1]<nums2[p2]){
                p1++;
            }else{
                p2++;
            }
        }


        int res[]=new int[st.size()];

        int i=0;

        for(int ele:st){
            res[i]=ele;
            i++;
        }

        return res;
        
    }



-------------------------------------------------------------------------------------------------------



class Solution {
    public int[] intersection(int[] nums1, int[] nums2) {


        Set<Integer> st1=new HashSet<Integer>();
        Set<Integer> st2=new HashSet<Integer>();

        for(int num:nums1){
            st1.add(num);
        }

        for(int num:nums2){
            st2.add(num);
        }

        st1.retainAll(st2);

        int res[] = new int[st1.size()];
        int i=0;
        for(int ele:st1){
            res[i]=ele;
            i++;
        }

        return res;


        
    }
}


------------------------------------------------------------------------------------------------------------------


class Solution {
    public int[] intersection(int[] nums1, int[] nums2) {

        Map<Integer,Integer> mp=new HashMap<>();

        for(int num:nums1)
        mp.put(num,1);

        List<Integer> li=new ArrayList<>();

        for(int n:nums2){
            if(mp.containsKey(n) && mp.get(n)==1){
                li.add(n);
                mp.put(n,0);
            }
        }

        int [] res=new int[li.size()];
        int i=0;
        for(int n:li){
            res[i]=li.get(i);
            i++;
        }

        return res;
        
    }
}
}
